<%  layout("/layouts/boilerplate") -%>

<body>
    <div class="row">
        <div class="col col-8 offset-2">
            <br><br>
    <h3>Create a New Listing</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
            <label for="desc" class="form-label">Description</label>
            <textarea type="text" id="desc" name="listing[description]" placeholder="Enter description" class="form-control" required required></textarea>
            <div class="invalid-feedback">Enter a short Description</div>
        </div>
        <select class="form-select" name="listing[category]" aria-label="Default select example" required>
            <option selected>Select Category</option>
            <option value="Pools">Pools</option>
            <option value="Farm">Farm</option>
            <option value="Mountains">Mountains</option>
            <option value="Camping">Camping</option>
            <option value="Arctic Pool">Arctic Pool</option>
            <option value="Castles">Castles</option>
            <option value="Rooms">Rooms</option>
            <option value="Iconic Cities'">Iconic Cities'</option>
          </select>
        <div class="mb-3">
            <label for="img" class="form-label">Upload Listing Image</label>
            <input type="file" id="img" name="listing[image]"  class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="loc" class="form-label">Location</label>
            <input type="text" id="loc" name="listing[location]" placeholder="Enter location" class="form-control" required>
            <div class="invalid-feedback">Enter a valid Location</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="text" type="number" id="price" name="listing[price]" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">Enter a valid Price</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="con" class="form-label">Country</label>
            <input type="text" id="con" name="listing[country]" placeholder="India" class="form-control" required>
            <div class="invalid-feedback">Enter a valid Country</div>
        </div>
        </div>
        <button class="btn btn-dark add-btn">ADD</button>
    
    </form>
</div>
</div>
</body>
