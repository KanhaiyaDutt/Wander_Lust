<%  layout("/layouts/boilerplate") -%>

<body>
    <div class="row mt-3">
        <h1 class="col-8 offset-2">Sign Up on WanderLust</h1>
        <div class="col-8 offset-2">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Create Username</label>
                    <input id="username" type="username" name="user[username]"  class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Enter E-mail ID</label>
                    <input id="email" type="email" name="user[email]"  class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Create Password</label>
                    <input id="password" type="password" name="user[password]"  class="form-control" required>
                </div>
                <button class="btn btn-success">SignUP</button>
            </form>
        </div>

    </div>




</body>